<body>

    <!-- NavBar1 ================================================== -->
    <%- include('../partials/nav1.ejs') %>

        <!-- NavBar2 ================================================== -->

        <!-- <%- include('../partials/nav2.ejs') %> -->


        <!-- Home Page ================================================= -->
        <%- include('../partials/home.ejs') %>

            <!-- Benefits page ============================================= -->
            <%- include('../partials/benefits.ejs') %>

                <!-- How it works =========================================== -->
                <%- include('../partials/steps.ejs') %>

                    <!-- Tools & Features Page =========================== -->
                    <%- include('../partials/tools.ejs') %>



                        <!-- Contact Page ==================================== -->
                        <%- include('../partials/contact.ejs') %>

                            <!-- Footer Page ==================================== -->
                            <%- include('../partials/footer.ejs') %>

                                <div id="user-id" style="display: none;">
                                    <%= USER_ID %>
                                </div>
                                <div id="service" style="display: none;">
                                    <%= SERVICE_ID %>
                                </div>
                                <div id="template" style="display: none;">
                                    <%= TEMPLATE_ID %>
                                </div>


                                <script>
                                    const contactform = document.getElementById("contactform");
                                    const userID = document.getElementById("user-id").innerHTML.trim();
                                    const serviceID = document.getElementById("service").innerHTML.trim();
                                    const templateID = document.getElementById("template").innerHTML.trim();



                                    contactform.addEventListener("submit", function (e) {
                                        var params = {
                                            from_name: e.srcElement[0].value,
                                            email_id: e.srcElement[2].value,
                                            message: e.srcElement[3].value
                                        };
                                        emailjs.init(userID);
                                        emailjs.send(serviceID, templateID, params).then(function (res) {
                                            console.log(res);
                                            alert("sent successfully");
                                        },
                                            reason => {
                                                alert("Error occured");
                                            })
                                    })
                                </script>



</body>

